@inherits NavMenuComponent

@if (IsDevelopment)
{
    <span class="breakpoint">
        <span class="d-inline d-sm-none">&nbsp;(xs)</span>
        <span class="d-none d-sm-inline d-md-none">&nbsp;(sm)</span>
        <span class="d-none d-md-inline d-lg-none">&nbsp;(md)</span>
        <span class="d-none d-lg-inline d-xl-none">&nbsp;(lg)</span>
        <span class="d-none d-xl-inline d-xxl-none">&nbsp;(xl)</span>
        <span class="d-none d-xxl-inline d-xxxl-none">&nbsp;(xxl)</span>
        <span class="d-none d-xxxl-inline">&nbsp;(xxxl)</span>
    </span>
}

<nav class="navbar navbar-expand-md px-md-4 bg-info-subtle">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <img src="@($"images/logo_{Theme}.svg")" alt="Plainquire" width="200" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li>
                    <NavLink class="nav-link me-5" href="" Match="NavLinkMatch.All">
                        <span class="d-block" data-bs-toggle="collapse" data-bs-target=".navbar-collapse.show">
                            Home
                        </span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link me-5" href="demo">
                        <span class="d-block" data-bs-toggle="collapse" data-bs-target=".navbar-collapse.show">
                            Demo
                        </span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link me-5" href="@OpeApiLink" target="_blank">
                        <span class="d-block" data-bs-toggle="collapse" data-bs-target=".navbar-collapse.show">
                            API
                        </span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link ms-md-5 me-3 border border-2 rounded p-1 w-fitcontent" @onclick="ToggleTheme">
                        <span class="d-block" data-bs-toggle="collapse" data-bs-target=".navbar-collapse.show">
                            <img src="images/theme.svg" class="theme-filter" alt="Theme" width="24" />
                        </span>
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link border border-2 rounded p-1 w-fitcontent" href="https://github.com/plainquire/plainquire" target="_blank">
                        <span class="d-block" data-bs-toggle="collapse" data-bs-target=".navbar-collapse.show">
                            <img src="images/github.svg" class="theme-filter" alt="GitHub" width="24" />
                        </span>
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>