<Project>

  <PropertyGroup>
    <Product>Plainquire</Product>
    <Title>$(Product)</Title>
    <Description>Easy filtering, sorting and paging for ASP.NET Core.</Description>
    <Authors>Florian Schick</Authors>
    <Company>Schick Software Entwicklung</Company>
    <Copyright>Â© Florian Schick, 2021-$([System.DateTime]::Now.ToString('yyyy')) all rights reserved</Copyright>
    <Owners>$(Company)</Owners>
    <Summary>$(Description)</Summary>

    <Version>0.0.0.0</Version>
    <FileVersion>0.0.0.0</FileVersion>
    <AssemblyVersion>$(FileVersion)</AssemblyVersion>
    <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>

    <PackageDescription>$(Description)</PackageDescription>
    <PackageIcon>Plainquire.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/plainquire/plainquire</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>filtering, sorting, paging, aps-net-core, webapi, swagger, swagger-ui, openapi, linq-expressions, expression-engine, csharp-library</PackageTags>

    <RepositoryUrl>https://github.com/plainquire/plainquire.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\README.md" Pack="true" PackagePath="README.md" />
    <None Include="..\..\Plainquire.png" Pack="true" PackagePath="Plainquire.png"/>
  </ItemGroup>

</Project>